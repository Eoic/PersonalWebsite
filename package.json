{
  "name": "personal-site",
  "version": "1.2.0",
  "description": "Personal website.",
  "scripts": {
    "minify-js": "uglifyjs --compress --mangle -- ./assets/js/main.js > ./build/js/main.js",
    "minify-css": "minify ./assets/css/main.css > ./build/css/main.css",
    "build-html": ". .venv/bin/activate && cd htmlgen && python main.py ../assets/ && cd ../",
    "build": "./scripts/build.sh",
    "dev": "npm run build-html && serve assets",
    "serve": "npm run build-html && serve build"
  },
  "author": "Karolis Strazdas",
  "license": "MIT",
  "devDependencies": {
    "minify": "^10.2.0",
    "serve": "^14.2.3",
    "uglify-js": "^3.17.4"
  }
}